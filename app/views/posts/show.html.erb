<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <%= @post.user.username %>
</p>

<p>
  <% if @post.user.avatar.url %>
    <%= image_tag @post.user.avatar.url, width: '100'%>
  <% end %>
</p>

<p>
  <strong>Blog entry:</strong>
  <%= @post.blog_entry.html_safe %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |

<div id="comments">

    <%= render 'comments/form', comment: @comment %>

    <% @post.comments.each do |comment| %>
        <p><strong><%= link_to comment.user.username, user_posts_path(name: comment.user.username) %> said...</strong></p>
	    <%= comment.comment_entry %>
	</p>
    <% end %>

</div>

<%= link_to 'Back', posts_path %>
